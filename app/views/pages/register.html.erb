
<div class="form">
	<h1>Please Register</h1>
	<form method="post">
		<input type="text" name="name" placeholder="Your Name" class="form-control" required>
        <br />
		<input type="text" name="username" placeholder="Username" class="form-control" required>
		<br />
		<input type="password" name="password" placeholder="Password" class="form-control" required>
		<br />
		<input type="email" name="email" placeholder="Email Address" class="form-control" required>
		<br />
		<input type="text" name="location" placeholder="Your Location" class="form-control" required>
		<br />
		<textarea name="bio" placeholder="Bio" class="form-control"></textarea>
		<br />
		<input type="file" name="photo" class="form-control">
        <br />
		<input type="submit" value="Submit" id="submitButton" class="btn btn-primary">
	</form>
</div>